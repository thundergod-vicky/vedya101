{
  "version": 2,
  "buildCommand": "npm install --prefix frontend && npm run build --prefix frontend",
  "installCommand": "npm install --prefix frontend",
  "outputDirectory": "frontend/.next",
  "env": {
    "NEXT_PUBLIC_API_URL": "${NEXT_PUBLIC_API_URL}"
  },
  "rewrites": [
    { "source": "/chat", "destination": "${NEXT_PUBLIC_API_URL}/chat" },
    { "source": "/chat/stream", "destination": "${NEXT_PUBLIC_API_URL}/chat/stream" },
  { "source": "/learning-plan", "destination": "${NEXT_PUBLIC_API_URL}/learning-plan" },
    { "source": "/learning-plan/:path*", "destination": "${NEXT_PUBLIC_API_URL}/learning-plan/:path*" },
    { "source": "/learning-plans", "destination": "${NEXT_PUBLIC_API_URL}/learning-plans" },
    { "source": "/learning-plans/:path*", "destination": "${NEXT_PUBLIC_API_URL}/learning-plans/:path*" },
    { "source": "/teaching/:path*", "destination": "${NEXT_PUBLIC_API_URL}/teaching/:path*" },
    { "source": "/notifications/:path*", "destination": "${NEXT_PUBLIC_API_URL}/notifications/:path*" },
    { "source": "/users/:path*", "destination": "${NEXT_PUBLIC_API_URL}/users/:path*" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "X-Content-Type-Options", "value": "nosniff" }
      ]
    }
  ]
}
