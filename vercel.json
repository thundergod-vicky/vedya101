{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "cd frontend && npm install && npm run build",
  "installCommand": "cd frontend && npm install",
  "outputDirectory": "frontend/.next",
  "env": {
    "NEXT_PUBLIC_API_URL": "https://your-backend-domain"
  },
  "rewrites": [
    { "source": "/chat", "destination": "https://your-backend-domain/chat" },
    { "source": "/chat/stream", "destination": "https://your-backend-domain/chat/stream" },
    { "source": "/learning-plan", "destination": "https://your-backend-domain/learning-plan" },
    { "source": "/learning-plan/:path*", "destination": "https://your-backend-domain/learning-plan/:path*" },
    { "source": "/learning-plans", "destination": "https://your-backend-domain/learning-plans" },
    { "source": "/learning-plans/:path*", "destination": "https://your-backend-domain/learning-plans/:path*" },
    { "source": "/teaching/:path*", "destination": "https://your-backend-domain/teaching/:path*" },
    { "source": "/notifications/:path*", "destination": "https://your-backend-domain/notifications/:path*" },
    { "source": "/users/:path*", "destination": "https://your-backend-domain/users/:path*" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "X-Content-Type-Options", "value": "nosniff" }
      ]
    }
  ]
}
